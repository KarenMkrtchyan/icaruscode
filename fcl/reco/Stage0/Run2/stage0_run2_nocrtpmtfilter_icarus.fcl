###
## This fhicl file is used to run "stage0" processing specifically for the case where all
## TPC data is included in an artdaq data product from a single instance
##
#include "stage0_run2_icarus.fcl"

SpillOnly:  true     # Discard events where there are not flashes within the beam spill window.
FilterLevel:           "medium"       # loose: accept everything ; medium: reject Top CRT matched entering cosmics; thight: rejects everything matched with an entering CRT Hit; default is loose.
